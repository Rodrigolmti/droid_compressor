<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.rodrigolmti.droid_compressor">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:name=".compressor.MainApplication"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".compressor.view.activity.main.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".compressor.view.activity.images.ImagesActivity"/>
        <activity android:name=".compressor.view.activity.compress.CompressActivity"/>
        <activity android:name=".compressor.view.activity.compressed.CompressedActivity"/>

        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="8e67140fd2c7681126394c6ab6fdde10fa9ca734"/>
    </application>

</manifest>